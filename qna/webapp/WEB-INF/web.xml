<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sum.com/xml/ns/javaee"
	xsi:xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>QnA</display-name>

	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-parm>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-parm>
		<init-parm>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-parm>
	</filter>

	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>slipp</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>slipp</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<webcome-file-list>
		<webcome-file>index.jsp</webcome-file>
	</webcome-file-list>
</web-app>